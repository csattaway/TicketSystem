@model TicketSystem.Models.tblTicket

@{
    ViewBag.Title = "Delete";
}

@if (User.Identity.Name.ToString() != "csattaway@gmail.com")
{
    <br />
    <br />
    <p>You are not authorized to edit tickets</p>
}
else
{




<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dtmCreate)
        </dd>

        <dt>
            Issue
        </dt>

        <dd>
            @Html.DisplayFor(model => model.txtIssue)
        </dd>

        <dt>
            Resolved? 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.blnResolved)
        </dd>

        <dt>
            User Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblUser.txtUserName)
        </dd>

        <dt>
            Severity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tlkpSeverityType.txtSeverityType)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            <br /><br />
            @Html.ActionLink("Back to Tickets", "Index")
        </div>
    }
</div>
}
