@model TicketSystem.Models.tblTicket

@{
    ViewBag.Title = "Delete";
}


@using (Html.BeginForm())
{
    if (User.Identity.Name.ToString() == "csattaway@gmail.com")
    {
<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dtmCreate)
        </dd>

        <dt>
            Issue
        </dt>

        <dd>
            @Html.DisplayFor(model => model.txtIssue)
        </dd>

        <dt>
            Issue Resolved?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.blnResolved)
        </dd>

        <dt>
            Submitted by
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblUser.txtUserName)
        </dd>

        <dt>
           Severity Level
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tlkpSeverityType.txtSeverityType)
        </dd>

    </dl>

</div>

    @Html.AntiForgeryToken()
        <br />
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" />

    </div>
    }
    else
    {
    <p>You aren't authorized to edit tickets</p>
    }

    
}
    
<br />
    
    @Html.ActionLink("Back to Tickets", "Index")

    